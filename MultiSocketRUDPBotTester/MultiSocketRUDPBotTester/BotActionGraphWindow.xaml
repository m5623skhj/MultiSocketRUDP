<Window x:Class="MultiSocketRUDPBotTester.BotActionGraphWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bot Action Graph"
        WindowState="Maximized">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <ListBox x:Name="ActionNodeListBox"
                     DisplayMemberPath="Name"/>

            <Button Grid.Row="1"
                    Content="Add"
                    Height="30"
                    Margin="0,5,0,0"
                    Click="AddNode_Click"/>
        </Grid>

        <!-- Right Panel -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>

            <ScrollViewer x:Name="GraphScroll"
                          Grid.Column="1"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          Background="#222">

                <Canvas x:Name="GraphCanvas"
                        Width="5000"
                        Height="5000"
                        Background="#222"/>
            </ScrollViewer>

            <Border Grid.Row="1"
                    Background="#111"
                    BorderBrush="#444"
                    BorderThickness="1,0,0,0"
                    Padding="5">
                <ListBox x:Name="LogListBox"
                         Foreground="White"
                         Background="#111"/>
            </Border>
        </Grid>
    </Grid>
</Window>