<Window x:Class="MultiSocketRUDPBotTester.BotActionGraphWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bot Action Graph"
        WindowState="Maximized">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ListBox x:Name="ActionNodeListBox"
                     DisplayMemberPath="Name"/>

            <!-- Button Panel -->
            <StackPanel Grid.Row="1" Margin="0,10,0,0">
                <Button Content="Add Node"
                        Height="35"
                        Margin="0,0,0,5"
                        Click="AddNode_Click"/>

                <Separator Margin="0,5"/>

                <Button Content="Validate Graph"
                        Height="35"
                        Margin="0,5,0,5"
                        Background="#FFFFA500"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="ValidateGraph_Click"/>

                <Button Content="Build Graph"
                        Height="35"
                        Margin="0,5,0,5"
                        Background="#FF4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="BuildGraph_Click"/>

                <Button Content="Apply to BotTester"
                        Height="35"
                        Margin="0,0,0,5"
                        Background="#FF2196F3"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="ApplyGraph_Click"/>

                <Separator Margin="0,5"/>

                <Button Content="View Statistics"
                        Height="35"
                        Margin="0,5,0,5"
                        Background="#FF9C27B0"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="ShowStatsWindow_Click"/>

                <TextBlock x:Name="StatusText"
                          Text="Ready"
                          Foreground="Gray"
                          HorizontalAlignment="Center"
                          Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Right Panel -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>

            <ScrollViewer x:Name="GraphScroll"
                          Grid.Column="1"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          Background="#222">

                <Canvas x:Name="GraphCanvas"
                        Width="5000"
                        Height="5000"
                        Background="#222"/>
            </ScrollViewer>

            <Border Grid.Row="1"
                    Background="#111"
                    BorderBrush="#444"
                    BorderThickness="1,0,0,0"
                    Padding="5">
                <ListBox x:Name="LogListBox"
                         Foreground="White"
                         Background="#111"/>
            </Border>
        </Grid>
    </Grid>
</Window>